#! /bin/sh

LX_APPLICATION="${PWD}"
LX_ROOT="/var/www/lx/trunk/framework"
LX_OUT="bin"

LX_MODELS=""
for file in `ls ${LX_APPLICATION}/src/models/*.xml`; do
    LX_MODELS="${LX_MODELS} ${file}"
done

#echo
echo "Launching configure..."
echo
echo "LX root directory: ${LX_ROOT}"
echo "Aplication directory: ${LX_APPLICATION}"
echo "LX output directory: ${LX_OUT}"

# write Makefile.rules
echo "LX_ROOT=\"${LX_ROOT}\"" > Makefile.rules
echo "LX_APPLICATION=\"${LX_APPLICATION}\"" >> Makefile.rules
echo "LX_OUT=\"${LX_OUT}\"" >> Makefile.rules
echo "LX_MODELS=${LX_MODELS}" >> Makefile.rules
